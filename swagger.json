{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Nodebucket API"
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Employees"
    }
  ],
  "paths": {
    "/api/employees/{empId}": {
      "get": {
        "tags": ["Employees"],
        "summary": "findEmployeeById",
        "description": "Find an employee by their ID (1007-1012)",
        "operationId": "findEmployeeById",
        "parameters": [
          {
            "name": "empId",
            "in": "path",
            "required": true,
            "description": "Employee ID",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "empId": {
                      "type": "number"
                    },
                    "firstName": {
                      "type": "string"
                    },
                    "lastName": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/employees/{empId}/tasks": {
      "get": {
        "tags": ["Employees"],
        "summary": "findAllTasks",
        "description": "Return all of an employees tasks",
        "operationId": "findAllTasks",
        "parameters": [
          {
            "name": "empId",
            "in": "path",
            "required": true,
            "description": "Employee ID",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "empId": {
                      "type": "number"
                    },
                    "firstName": {
                      "type": "string"
                    },
                    "lastName": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Employees"],
        "summary": "createTask",
        "description": "Create an employee task",
        "operationId": "createTask",
        "parameters": [
          {
            "name": "empId",
            "in": "path",
            "required": true,
            "description": "Employee ID",
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "description": "Description of task",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "empId": {
                      "type": "number"
                    },
                    "firstName": {
                      "type": "string"
                    },
                    "lastName": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
